{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar postagem: </h4>
        <form action="/admin/postagem/edit" method="POST">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input type="text" name="titulo" required="" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" required="" value="{{postagem.slug}}" class="form-control">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" required="" value="{{postagem.descricao}}" class="form-control">
            <label for="conteudo"> Conteudo: </label>
            <textarea name="conteudo"  required=""  class="form-control">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categorias: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>